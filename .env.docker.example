# =============================================================================
# Environment Configuration for Docker
# Sistem Informasi Arsip Digital
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Sanapati Surel"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# -----------------------------------------------------------------------------
# Docker Settings
# -----------------------------------------------------------------------------
# User/Group IDs (run: id -u && id -g)
UID=1000
GID=1000

# Exposed Ports (FrankenPHP serves on port 80/443)
APP_PORT=8000
VITE_PORT=5173
MAILHOG_PORT=8025

# FrankenPHP Settings
SERVER_NAME=:80

# -----------------------------------------------------------------------------
# Database - MySQL (Docker)
# IMPORTANT: DB_USERNAME cannot be 'root' - use a different username
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=arsip_digital
DB_USERNAME=arsip
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# -----------------------------------------------------------------------------
# Cache & Session (File/Database based - no Redis required)
# -----------------------------------------------------------------------------
CACHE_STORE=file
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# -----------------------------------------------------------------------------
# Queue (Database based - no Redis required)
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=database

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Mail (MailHog for Development)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@arsip-digital.local"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Filesystem
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# Vite
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
